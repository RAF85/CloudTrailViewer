<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="borderPane"
            styleClass="widget-header">
    <center>
        <Label fx:id="titleLabel" BorderPane.alignment="CENTER" styleClass="widget-title" />
    </center>
    <right>
        <HBox prefHeight="35.0" BorderPane.alignment="BOTTOM_RIGHT">
            <Button fx:id="editButton" mnemonicParsing="false" styleClass="edit-button" onAction="#editWidget" />
            <Button fx:id="removeButton" mnemonicParsing="false"  styleClass="remove-button" onAction="#removeWidget" />
            <padding>
                <Insets top="5.0" left="5.0" right="5.0" />
            </padding>
        </HBox>
    </right>
</BorderPane>