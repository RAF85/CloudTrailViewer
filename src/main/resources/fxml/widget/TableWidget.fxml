<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="widgetContainer"
            styleClass="widget">
    <top>
        <BorderPane fx:id="widgetControlsContainer" styleClass="widget-header">
            <center>
                <Label fx:id="titleLabel" BorderPane.alignment="CENTER" styleClass="widget-title" />
            </center>
            <right>
                <HBox prefHeight="35.0" BorderPane.alignment="BOTTOM_RIGHT">
                    <Button fx:id="editButton" mnemonicParsing="false" styleClass="edit-button" onAction="#editWidget" />
                    <Button fx:id="removeButton" mnemonicParsing="false"  styleClass="remove-button" onAction="#removeWidget" />
                    <padding>
                        <Insets top="5.0" left="5.0" right="5.0" />
                    </padding>
                </HBox>
            </right>
        </BorderPane>
    </top>
    <center>
        <TableView fx:id="tableView" />
    </center>
</BorderPane>



